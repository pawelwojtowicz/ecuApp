#!/bin/bash
source deploymentPaths

export BUSY_BOX=$THIRD_PARTY_COMPONENTS/BusyBox
export BUSY_BOX_VERSION=busybox-1.22.1
export BUSY_BOX_ARCHIVE=$BUSY_BOX_VERSION.tar.bz2
export BUSY_BOX_CONFIG_FILE=linuxDevice_defconfig

tar xvf $BUSY_BOX/$BUSY_BOX_ARCHIVE -C $BUSY_BOX

cp -v $BUSY_BOX/$BUSY_BOX_CONFIG_FILE $BUSY_BOX/$BUSY_BOX_VERSION/configs

make -C $BUSY_BOX/$BUSY_BOX_VERSION $BUSY_BOX_CONFIG_FILE
make -C $BUSY_BOX/$BUSY_BOX_VERSION install

